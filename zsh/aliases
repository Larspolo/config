# Shortcuts
alias p="python3"
alias stfu='sudo shutdown now'
alias please="sudo"
alias plz="sudo"

# Apt
alias ai='sudo apt install'
alias au='sudo apt update && sudo apt upgrade'
alias ac='sudo apt autoclean -y && sudo apt autoremove -y'

# Extra
alias config="code ~/Documents/config"
alias pastebin="curl -F 'clbin=<-' https://clbin.com"

# Programming utils
alias dc="docker-compose"
alias dstopall='docker stop $(docker ps -q)'
alias gr='grep -irn --exclude-dir={vendor,node_modules,storage/logs,storage/framework}'
